<%#　プロフィール編集　%>

<h2>User Info</h2>
<%= attachment_image_tag current_user, :profile_image,size: "60x60",fallback:"no_image.jpg"%>
<p>name<%= current_user.name %></p>
<p>introduction<%= current_user.introduction %></p>
<button><%= link_to "Edit",edit_user_path(current_user.id) %></button>

<%# 新規投稿 %>
  <div>
    <%= form_with model: @new_book, local:true do |f| %>
      <h2>New Book</h2>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
  </div>


<h2>Book detail</h2>
<%= current_user.name %>
<%= attachment_image_tag current_user, :profile_image,size: "60x60",fallback:"no_image.jpg"%>
<%= link_to "#{@book.title}",book_path(@book) %>
<%= @book.body %>
  <% if @book.id == current_user.id %>
    <button><%= link_to "edit",edit_user_path(current_user.id) %></button>
    <button><%= link_to "destroy" %></button>
  <% end %>
