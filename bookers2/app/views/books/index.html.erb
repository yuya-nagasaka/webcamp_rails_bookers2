<%# 投稿一覧 %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.zip(@users).each do |book,user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image,size: "60x60",fallback:"no_image.jpg"%></td>
      <td><%= link_to "#{book.title}",books_path %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>

</table>