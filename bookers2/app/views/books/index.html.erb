<%# 新規投稿 %>
  <div>
    <%= form_with model: @new_book, local:true do |f| %>
      <h2>New Book</h2>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>opinion</h4>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
    <% end %>
  </div>

